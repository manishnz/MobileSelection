            android:name=".Activities.PhoneSearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ProductListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.OrderActivity"
            android:screenOrientation="portrait" />
