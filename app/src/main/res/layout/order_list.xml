<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivwOrderProduct"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:paddingLeft="5dp"
            app:srcCompat="@drawable/mobile" />

        <TextView
            android:id="@+id/tvwOrderBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/tvwOrderModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/tvwOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/tvwSpace"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="" />

        <Spinner
            android:id="@+id/ddlQuantity"
            android:layout_width="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:background="@drawable/ddl_cutom_border"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>