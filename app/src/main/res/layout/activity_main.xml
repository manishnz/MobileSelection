<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnLoginMain"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:paddingTop="50dp"
            android:layout_gravity="center"
            android:onClick="btnLoginMain_OnClick"
            app:srcCompat="@drawable/login" />

        <ImageView
            android:id="@+id/btnRegisterMain"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:paddingTop="50dp"
            android:layout_gravity="center"
            android:onClick="btnRegisterMain_OnClick"
            app:srcCompat="@drawable/register_now" />

        <ImageView
            android:id="@+id/btnSearchMain"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:paddingTop="50dp"
            android:layout_gravity="center"
            android:onClick="btnSearchMain_OnClick"
            app:srcCompat="@drawable/mobile_search" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>